@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Make sure this matches your layout file name
}

<div class="container">
    <div class="text-center my-5">
        <h1 class="display-4 text-primary">Welcome To</h1>
        <h1 class="display-4 text-primary">SparkNova Labs</h1>
    </div>

    <div class="row justify-content-center">
        <!-- Departments Card -->
        <div class="col-md-5 col-lg-3 mb-4">
            <a asp-controller="Department" asp-action="Index" class="card-link">
                <div class="card shadow-sm h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-building fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Departments</h5>
                        <p class="card-text">Manage departments</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Employees Card -->
        <div class="col-md-5 col-lg-3 mb-4">
            <a asp-controller="Employee" asp-action="Index" class="card-link">
                <div class="card shadow-sm h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-users fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Employees</h5>
                        <p class="card-text">Manage employees</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Users Card -->
        <div class="col-md-5 col-lg-3 mb-4">
            <a asp-controller="User" asp-action="Index" class="card-link">
                <div class="card shadow-sm h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-user-cog fa-3x text-info mb-3"></i>
                        <h5 class="card-title">Users</h5>
                        <p class="card-text">Manage system users</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Roles Card -->
        <div class="col-md-5 col-lg-3 mb-4">
            <a asp-controller="Role" asp-action="Index" class="card-link">
                <div class="card shadow-sm h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-shield-alt fa-3x text-warning mb-3"></i>
                        <h5 class="card-title">Roles</h5>
                        <p class="card-text">Manage user roles</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .card {
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.2); /* Semi-transparent white border */
        border-radius: 10px;
        background-color: rgba(255, 255, 255, 0.05); /* Slightly visible background for depth */
        backdrop-filter: blur(5px); /* Optional: creates frosted glass effect */
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            border-color: rgba(255, 255, 255, 0.4); /* Brighter border on hover */
            background-color: rgba(255, 255, 255, 0.1); /* Slightly more visible on hover */
        }

    .card-link {
        text-decoration: none;
        color: inherit;
    }

        .card-link:hover {
            text-decoration: none;
        }

    /* Ensure text remains readable on transparent background */
    .card-body {
        color: white; /* Assuming you want white text */
    }
</style>

<div class="container">
    <!-- Rest of your dashboard HTML remains the same -->
    <div class="text-center my-5">
        
    </div>

    <div class="row justify-content-center">
        <!-- Cards remain exactly the same -->
    </div>
</div>

